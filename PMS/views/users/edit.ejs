<% include ../partial/header %>
<br>
<div class="container-fluid">

    <font face="Poppin" size="7">Edit User</font>
    <hr>

</div>

<div class="container">
  <form action="" method="POST">
      <div class="form-group row">
          <label for="name" class="col-sm-2 col-form-label">Firstname</label>
          <div class="col-sm-10">
              <input type="text" class="form-control" placeholder="First Name" name="firstname" value="<%= data.firstname%>">
          </div>
      </div>
      <div class="form-group row">
          <label for="name" class="col-sm-2 col-form-label">Lastname</label>
          <div class="col-sm-10">
              <input type="text" class="form-control" placeholder="Last Name" name="lastname" value="<%= data.lastname%>">
          </div>
      </div>
      <div class="form-group row">
          <label for="name" class="col-sm-2 col-form-label">Email</label>
          <div class="col-sm-10">
              <input type="email" class="form-control" placeholder="Email" name="email" value="<%= data.email%>">
          </div>
      </div>
      <div class="form-group row">
          <label for="name" class="col-sm-2 col-form-label">Password</label>
          <div class="col-sm-10">
              <input type="password" class="form-control" placeholder="Password" name="password" value="<%= data.password%>">
          </div>
      </div>
      <div class="form-group row">
          <label class="col-sm-2">Position</label>

          <!-- POSITION CHOICES -->
          <div class="form-group col-sm-3">
              <div class="custom-control custom-radio">
                  <input type="radio" class="custom-control-input" id="manager" name="position" value="Manager"  <%= data.position == "Manager" ? "checked": "" %>>
                  <label class="custom-control-label" for="manager">Manager</label>
              </div>
              <div class="custom-control custom-radio">
                  <input type="radio" class="custom-control-input" id="softdev" name="position"
                      value="Software Developer" <%= data.position = "Software Developer" ? "checked": "" %>>
                  <label class="custom-control-label" for="softdev">Software Developer</label>
              </div>
              <div class="custom-control custom-radio">
                  <input type="radio" class="custom-control-input" id="quality" name="position"
                      value="Quality Assurance" <%= data.position = "Quality Assurance" ? "checked": "" %> >
                  <label class="custom-control-label" for="quality">Quality Assurance</label>
              </div>
          </div>
      </div>

      <!--       Job Type        -->
      <div class="form-group row">
          <label class="col-sm-2">Job Type</label>
          <div class="form-group col-sm-3">
              <div class="custom-control custom-radio">
                  <input type="radio" class="custom-control-input" id="fulltime" name="isfulltime" value="fulltime" <%= data.isfulltime = "Full Time" ? "checked": "" %> >
                  <label class="custom-control-label" for="fulltime">Full Time</label>
              </div>
              <div class="custom-control custom-radio">
                  <input type="radio" class="custom-control-input" id="parttime" name="isfulltime" value="parttime" <%= data.isfulltime = "PartTime" ? "checked": "" %> >
                  <label class="custom-control-label" for="parttime">Part Time</label>
              </div>
          </div>
      </div>
      <div class="form-group row">
          <div class="col-sm-10">
              <button type="submit" class="btn btn-primary">Save</button>
          </div>
      </div>
  </form>

</div>
<% include ../partial/header %>
<div class="container-fluid">
  <div>
      <h1>Add Project</h1>
  </div>
  <hr>
</div>
<div class="container">
  <form action="" method="POST">
      <div class="form-group row">
          <label for="name" class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-10">
              <input type="text" class="form-control" id="name" placeholder="Project Name" name="name" required>
          </div>
      </div>
      <div class="form-group row">
          <div class="col-sm-2">Members</div>
          <div class="col-sm-10">
              <% for(let i = 0; i < data.length; i++){ %>
              <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="member" id="gridCheck1"
                      value="<%= data[i].userid %>, '<%= data[i].role %>'">
                  <label class="form-check-label" for="gridCheck1">
                      <%= data[i].firstname%> <%= data[i].lastname%>
                  </label>
              </div>
              <% } %>
          </div>
      </div>
      <div class="form-group row">
          <div class="col-sm-10">
              <button type="submit" class="btn btn-primary">Save</button>
              <a href="/projects" class="btn  btn-warning">Cancel</a>
          </div>
      </div>
  </form>

</div>

<% include ../partial/footer %>